{
    "$schema": "https://json.schemastore.org/prettierrc",
    "jsonRecursiveSort": true,
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        }
    ],
    "plugins": [
        "prettier-plugin-astro",
        "prettier-plugin-sort-json",
        "prettier-plugin-tailwindcss"
    ],
    "printWidth": 100,
    "tabWidth": 4
}
